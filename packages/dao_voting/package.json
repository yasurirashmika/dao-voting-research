{
  "name": "dao_voting",
  "version": "1.0.0",
  "description": "DAO Voting Smart Contracts",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:unit": "npx hardhat test test/unit/",
    "test:integration": "npx hardhat test test/integration/",
    "test:gas": "cross-env REPORT_GAS=true npx hardhat test",
    "coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat run scripts/deploy-full-system.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy-full-system.js --network sepolia",
    "verify:sepolia": "node scripts/verify-contracts.js",
    "node:local": "npx hardhat node",
    "clean": "npx hardhat clean && rm -rf circuits/build/*",
    "size": "npx hardhat size-contracts",
    "test:zkp": "npx hardhat test test/zkp/PrivateVoting.test.js",
    "deploy:zkp:local": "npx hardhat run scripts/deploy-zkp-system.js --network localhost",
    "deploy:zkp:sepolia": "npx hardhat run scripts/deploy-zkp-system.js --network sepolia",
    "circuits:compile": "powershell -ExecutionPolicy Bypass -File circuits/scripts/compile.ps1",
    "circuits:setup": "powershell -ExecutionPolicy Bypass -File circuits/scripts/setup.ps1",
    "circuits:verifier": "powershell -ExecutionPolicy Bypass -File circuits/scripts/generate-verifier.ps1",
    "circuits:full": "npm run circuits:compile && npm run circuits:setup && npm run circuits:verifier",
    "proof:generate": "node circuits/scripts/generateProof.js",
    "zkp:full": "npm run circuits:full && npm run compile && npm run test:zkp"
  },
  "keywords": [
    "DAO",
    "governance",
    "blockchain",
    "zero-knowledge",
    "privacy",
    "voting"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "snarkjs": "^0.7.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.14",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "chai": "^4.5.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.22.15",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  }
}
